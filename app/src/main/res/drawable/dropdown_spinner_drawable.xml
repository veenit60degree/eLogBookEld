<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="@dimen/margin_short_1"
                        android:color="@color/ripple_effect_dark_gray" />

                    <corners android:radius="@dimen/margin_short_3" />

                    <solid android:color="?attr/transparent_spinner"></solid>


                    <padding
                        android:left="@dimen/margin_short_1"
                        android:top="@dimen/margin_short_1"
                        android:right="@dimen/margin_short_8"
                        android:bottom="@dimen/margin_short_1"/>
                </shape>
            </item>


            <item>
                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@drawable/dropdown_gray"
                    android:tint="@color/ripple_effect_dark_gray"
                    />

            </item>


        </layer-list>


    </item>
</layer-list>