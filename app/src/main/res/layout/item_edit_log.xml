<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_height_51"
    android:orientation="horizontal"
    android:background="@color/transparent"
    >


    <LinearLayout
        android:id="@+id/editLogItemLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_50"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_short_5"
        android:paddingBottom="@dimen/margin_short_5"
        android:background="?attr/layout_color_dot"

        >


        <RelativeLayout
            android:id="@+id/dragLay"
            android:layout_width="@dimen/view_height_70"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"

                >

                <ImageView
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="@dimen/margin_20"
                    android:src="@drawable/icon_drag_drop"
                    android:layout_marginTop="@dimen/margin_short_1"
                    android:layout_gravity="center_vertical"
                    android:tint="?attr/deferal_icon_color"

                    />
                <TextView
                    android:id="@+id/editLogSerialNoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textColor"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/text_size_17"
                    android:paddingLeft="@dimen/margin_short_8"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    />

            </LinearLayout>




        </RelativeLayout>



        <RelativeLayout
            android:layout_width="@dimen/view_height_150"
            android:layout_height="@dimen/view_height_40"
            android:layout_gravity="center_vertical"
            android:descendantFocusability="blocksDescendants"

            >

            <Spinner
                android:id="@+id/editLogStatusSpinner"
                style="@style/spinner_style_editlog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_40"
                android:gravity="center_horizontal|center_vertical"


                />

        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/startTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin_short_8"
            android:paddingLeft="@dimen/margin_short_5"
            android:background="@drawable/edit_log_drawable"

            >


            <TextView
                android:id="@+id/startTimeTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/startTimeIV"
                android:gravity="center_horizontal|center_vertical"
                android:text="00:00"
                android:textSize="@dimen/text_size_16"
                android:textColor="?attr/textColor"
                />

            <RelativeLayout
                android:id="@+id/startTimeIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_short_5"
                android:padding="@dimen/margin_short_5"
                >


                <ImageView
                    android:layout_width="@dimen/margin_22"
                    android:layout_height="@dimen/margin_22"
                    android:layout_centerVertical="true"
                    android:src="@drawable/time_clock"
                    android:tint="@color/black"

                    />

            </RelativeLayout>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/endTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin_short_8"
            android:paddingLeft="@dimen/margin_short_5"
            android:background="@drawable/edit_log_drawable"

            >


            <TextView
                android:id="@+id/endTimeTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/endTimeIV"
                android:gravity="center_horizontal|center_vertical"
                android:text="00:00"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/text_size_16" />


            <RelativeLayout
                android:id="@+id/endTimeIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_short_5"
                android:padding="@dimen/margin_short_5"
                >


                <ImageView
                    android:layout_width="@dimen/margin_22"
                    android:layout_height="@dimen/margin_22"
                    android:src="@drawable/time_clock"
                    android:tint="@color/black"

                    />
            </RelativeLayout>

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="@dimen/view_height_115"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/editLogDurationTV"
            android:layout_width="@dimen/view_height_115"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_short_5"

            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/margin_short_5"
            android:text="00:00"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_16"

            />



    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/deleteBtn"
            android:layout_width="@dimen/view_height_25"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/margin_short_3"
            android:layout_marginRight="@dimen/margin_10"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/delete_edit_log"
                android:tint="@color/black"

                />

        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_short_1"
        android:background="@color/transparent"
        />


</LinearLayout>