    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10"
        >


        <ImageView
            android:id="@+id/askLoginIV"
            android:layout_width="@dimen/view_height_190"
            android:layout_height="@dimen/view_height_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_height_50"
            android:layout_marginBottom="@dimen/margin_10"
            android:src="@drawable/als_logo" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/askLoginIV"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/view_height_50"
            android:layout_marginLeft="@dimen/view_height_50"
            android:layout_marginTop="@dimen/margin_short_7"

            >

            <TextView
                android:id="@+id/selectTypeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/login_with"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_20"
                >

                <Button
                    android:id="@+id/mainDriverBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_40"
                    android:text="@string/main_driver_title"
                    android:textColor="@color/bluee_login_one"
                    android:textSize="@dimen/text_size_16"
                    android:background="@drawable/login_driver_btn_selector"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_weight="1"
                    />



                <Button
                    android:id="@+id/CoDriverBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_40"
                    android:text="@string/co_driver_title"
                    android:textColor="@color/whiteee"
                    android:textSize="@dimen/text_size_16"
                    android:background="@drawable/green_selector"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:layout_weight="1"

                    />



            </LinearLayout>


        </LinearLayout>




    </RelativeLayout>

    </ScrollView>


</RelativeLayout>