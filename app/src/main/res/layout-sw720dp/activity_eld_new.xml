<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eldHomeMainLay"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteee"

    >


    <Button
        android:id="@+id/autoOffDutyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />

    <Button
        android:id="@+id/autoOnDutyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />

    <Button
        android:id="@+id/autoDriveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />

    
    <Button
        android:id="@+id/resetTimerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />

    <Button
        android:id="@+id/refreshLogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />

<include
    android:id="@+id/eldActionBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_height_70"
    layout="@layout/actionbar_eld"

    />



    <LinearLayout
        android:id="@+id/eldChildSubLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/eldActionBar"
        android:layout_above="@+id/eldNewBottomLay"
        android:background="?attr/bgColor"
        android:padding="@dimen/margin_15"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/eldHomeDriverUiLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_short_5"
            android:layout_marginTop="@dimen/margin_short_5"
            android:layout_marginBottom="@dimen/margin_short_5"
            android:layout_marginRight="@dimen/margin_short_5"
            android:background="@drawable/gray_background_drawable"
            android:layout_weight="1"

            >


            <RelativeLayout
                android:id="@+id/topTitleLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent"
                android:layout_marginLeft="@dimen/margin_short_5"
                android:layout_marginTop="@dimen/margin_short_5"
                android:layout_marginBottom="@dimen/margin_short_9"
                >

                <TextView
                    android:id="@+id/invisibleTxtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />



                <RelativeLayout
                    android:id="@+id/currentCycleLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="@dimen/margin_short_7"
                    >

                    <ImageView
                        android:id="@+id/cyleFlagImgView"
                        android:layout_width="@dimen/view_height_35"
                        android:layout_height="@dimen/view_height_35"
                        android:padding="@dimen/margin_short_2"
                        android:src="@drawable/usa_flag"

                        />

                    <TextView
                        android:id="@+id/currentCycleTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_toRightOf="@+id/cyleFlagImgView"
                        android:layout_marginTop="@dimen/margin_short_3"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/margin_short_1"
                        android:textSize="@dimen/text_size_19"
                        android:textColor="?attr/txt_eld_color"
                        android:text="(U 70/8)"
                        android:textStyle="bold"
                        />


                    <ImageView
                        android:id="@+id/editCycleTmgView"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/pencil"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/currentCycleTxtView"
                        android:layout_marginTop="@dimen/margin_14"
                        android:visibility="gone"
                        android:tint="?attr/eld_icon_color"
                        />


                </RelativeLayout>


                <TextView
                    android:id="@+id/remainingTimeTopTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/currentCycleLay"
                    android:layout_marginTop="@dimen/margin_short_3"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/margin_short_1"
                    android:textSize="@dimen/text_size_19"
                    android:textColor="?attr/txt_eld_color"
                    android:text="Cycle Time Left: 45:36"
                    />








                <RelativeLayout
                    android:id="@+id/calLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toLeftOf="@+id/summaryBtn"
                    android:paddingRight="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_short_6"

                    >

                    <ImageView
                        android:id="@+id/calendarBtn"
                        android:layout_width="@dimen/view_height_34"
                        android:layout_height="@dimen/view_height_34"
                        android:src="@drawable/calender_eld"
                        android:layout_marginTop="@dimen/margin_short_6"
                        android:tint="?attr/color_eld_theme"
                        />


                    <TextView
                        android:id="@+id/dateTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/txt_eld_color"
                        android:textSize="@dimen/text_size_20"
                        android:paddingTop="@dimen/margin_short_8"
                        android:layout_marginLeft="@dimen/view_height_38"
                        android:text="mm/dd/yyyy"

                        />



                    <TextView
                        android:id="@+id/driverTimeZoneTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_height_43"
                        android:layout_below="@+id/dateTv"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="?attr/txt_eld_color"
                        android:textSize="@dimen/text_size_15"

                        />


                </RelativeLayout>




                <TextView
                    android:id="@+id/summaryBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_light_dark_selector"
                    android:text="@string/summary"
                    android:textSize="@dimen/text_size_18"
                    android:paddingTop="@dimen/margin_11"
                    android:paddingBottom="@dimen/margin_13"
                    android:paddingLeft="@dimen/margin_18"
                    android:paddingRight="@dimen/margin_18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/whiteee"
                    android:layout_marginRight="@dimen/margin_short_5"
                    />





                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/remainingTimeTopTV"
                    android:layout_toLeftOf="@+id/calLay"
                    android:paddingRight="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_short_6"

                    >


                    <ImageView
                        android:id="@+id/connectionStatusImgView"
                        android:layout_width="@dimen/view_height_150"
                        android:layout_height="@dimen/view_height_37"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_short_2"
                        android:paddingTop="@dimen/margin_short_4"
                        android:src="@drawable/wifi_obd_active"
                        android:tint="?attr/download_icon_color"
                        />

                </RelativeLayout>


            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/topTitleLay"
                android:paddingLeft="@dimen/margin_short_5"
                android:paddingBottom="@dimen/margin_short_5"
                android:paddingTop="@dimen/margin_11"
                >

                <RelativeLayout
                    android:id="@+id/StatusMainView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/eld_blue_new_default"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_weight="2"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_centerInParent="true"
                        >

                        <TextView
                            android:id="@+id/jobTypeTxtVw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/whiteee"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="@dimen/view_height_35"
                            android:padding="0dp"
                            android:text="@string/Off_Duty"
                            />


                        <LinearLayout
                            android:id="@+id/remainingLay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            >

                            <TextView
                                android:id="@+id/timeRemainingTxtVw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/TimeRemaining"
                                android:textColor="@color/whiteee"
                                android:textSize="@dimen/text_size_21"
                                android:padding="0dp"
                                />


                            <TextView
                                android:id="@+id/jobTimeRemngTxtVw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/whiteee"
                                android:textStyle="bold"
                                android:padding="0dp"
                                android:textSize="@dimen/view_height_35"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/usedHourLay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/whiteee"
                                android:textSize="@dimen/text_size_21"
                                android:padding="0dp"
                                android:text="Used"

                                />

                            <TextView
                                android:id="@+id/jobTimeTxtVw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/whiteee"
                                android:textStyle="bold"
                                android:padding="0dp"
                                android:textSize="@dimen/view_height_30"

                                />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/perDayTxtVw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/whiteee"
                            android:padding="0dp"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/as_per_curr_status"

                            />


                    </LinearLayout>

                </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent"
            android:layout_marginLeft="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:layout_weight="1"

            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/margin_short_5"
                        android:paddingBottom="@dimen/margin_short_5"
                        android:layout_weight="0.9"
                        >



                    <LinearLayout
                            android:id="@+id/DriverLay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:layout_width="@dimen/view_height_40"
                                android:layout_height="@dimen/view_height_40"
                                android:layout_marginRight="@dimen/margin_10"
                                android:src="@drawable/driver"
                                android:tint="?attr/eld_icon_color"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"

                                >


                                <TextView
                                    android:id="@+id/nameTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/txt_eld_color"
                                    android:textSize="@dimen/text_size_18"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    />

                                <TextView
                                    android:id="@+id/DriverComNameTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/active_status_bg"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="bold"
                                    android:singleLine="true"

                                    />

                            </LinearLayout>


                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >

                            <LinearLayout
                                android:id="@+id/truckLay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >

                                <ImageView
                                    android:layout_width="@dimen/view_height_40"
                                    android:layout_height="@dimen/view_height_40"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:src="@drawable/truck_no_eld"
                                    android:tint="?attr/eld_icon_color"
                                    />


                                <TextView
                                    android:id="@+id/tractorTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/txt_eld_color"
                                    android:textSize="@dimen/text_size_18"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/margin_short_8"
                                    />

                                <ImageView
                                    android:id="@+id/editTruckIV"
                                    android:layout_width="@dimen/margin_28"
                                    android:layout_height="@dimen/view_height_33"
                                    android:src="@drawable/pencil"
                                    android:layout_marginLeft="@dimen/margin_short_4"
                                    android:layout_marginBottom="@dimen/margin_short_1"
                                    android:layout_marginTop="@dimen/margin_short_7"
                                    android:tint="?attr/eld_icon_color"
                                    />
                            </LinearLayout>

                        </LinearLayout>





                        <LinearLayout
                            android:id="@+id/shippingLay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="@dimen/margin_short_3"
                            android:paddingLeft="@dimen/margin_short_3"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:layout_width="@dimen/view_height_40"
                                android:layout_height="@dimen/view_height_38"
                                android:src="@drawable/shipping_doc_icon"
                                android:tint="?attr/eld_icon_color"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ShippingInfo"
                                android:textColor="?attr/txt_eld_color"
                                android:textSize="@dimen/text_size_18"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_marginTop="@dimen/margin_short_8"
                                />


                            <ImageView
                                android:id="@+id/shippingStatusIV"
                                android:layout_width="@dimen/margin_25"
                                android:layout_height="@dimen/margin_25"
                                android:layout_marginTop="@dimen/margin_short_5"
                                android:layout_marginLeft="@dimen/margin_short_4"
                                android:src="@drawable/shipping_empty"
                                />


                        </LinearLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/margin_short_9"
                        android:paddingBottom="@dimen/margin_short_5"
                        android:layout_weight="1"
                        >


                        <LinearLayout
                            android:id="@+id/coDriverLay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:id="@+id/codriverImgView"
                                android:layout_width="@dimen/view_height_40"
                                android:layout_height="@dimen/view_height_40"
                                android:layout_marginRight="@dimen/margin_10"
                                android:src="@drawable/driver"
                                android:tint="?attr/eld_icon_color"
                                />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"

                                >


                                <TextView
                                    android:id="@+id/coDriverTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/txt_eld_color"
                                    android:textSize="@dimen/text_size_18"
                                    android:textStyle="bold"
                                    />


                                <TextView
                                    android:id="@+id/coDriverComNameTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/active_status_bg"
                                    android:textSize="@dimen/text_size_14"
                                    android:singleLine="true"
                                    />

                            </LinearLayout>


                        </LinearLayout>





                        <LinearLayout
                            android:id="@+id/trailorLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >


                            <ImageView
                                android:layout_width="@dimen/view_height_43"
                                android:layout_height="@dimen/view_height_43"
                                android:layout_marginRight="@dimen/margin_10"
                                android:src="@drawable/trailer"
                                android:tint="?attr/eld_icon_color"
                                />


                            <TextView
                                android:id="@+id/trailorTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/txt_eld_color"
                                android:textSize="@dimen/text_size_18"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/margin_short_7"

                                />

                            <ImageView
                                android:id="@+id/editTrailorIV"
                                android:layout_width="@dimen/margin_28"
                                android:layout_height="@dimen/view_height_33"
                                android:src="@drawable/pencil"
                                android:layout_marginLeft="@dimen/margin_short_4"
                                android:layout_marginBottom="@dimen/margin_short_1"
                                android:layout_marginTop="@dimen/margin_short_8"
                                android:tint="?attr/eld_icon_color"
                                />

                        </LinearLayout>





                        <LinearLayout
                            android:id="@+id/odometerLay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="@dimen/margin_short_3"
                            android:paddingLeft="@dimen/margin_short_3"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:layout_width="@dimen/view_height_38"
                                android:layout_height="@dimen/view_height_38"
                                android:src="@drawable/odometer"
                                android:tint="?attr/eld_icon_color"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Odometers"
                                android:textColor="?attr/txt_eld_color"
                                android:textSize="@dimen/text_size_18"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:paddingTop="@dimen/margin_short_6"
                                />
                        </LinearLayout>





                    </LinearLayout>

                </LinearLayout>

    <TextView
        android:id="@+id/excpnEnabledTxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/excptn_enabled"
        android:textColor="@color/colorVoilation"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_23"
        android:paddingBottom="@dimen/margin_10"
        android:visibility="gone"
        />

</RelativeLayout>


            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_short_5"
            android:layout_margin="@dimen/margin_short_5"
            android:orientation="vertical"
            android:layout_weight="2"
            >

            <RelativeLayout
                android:id="@+id/onDutyLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:background="@drawable/gray_eld_selector"
                android:layout_marginLeft="@dimen/margin_short_5"
                android:layout_marginBottom="@dimen/margin_short_5"
                android:paddingLeft="@dimen/margin_16"
                android:paddingRight="@dimen/margin_16"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_weight="1"

                >



                <TextView
                    android:id="@+id/onDutyTimeTxtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/onDutyTxtVw"
                    android:layout_centerVertical="true"
                    android:textColor="?attr/txt_eld_color"
                    android:padding="0dp"
                    android:textSize="@dimen/text_size_28"
                    android:text="@string/time_default"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/onDutyViolationTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Violation"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/onDutyTimeTxtVw"
                    android:layout_centerVertical="true"
                    android:textColor="?attr/txt_eld_color"
                    android:textSize="@dimen/text_size_14"
                    android:padding="0dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/onDutyTxtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/On_Duty"
                    android:layout_marginRight="@dimen/margin_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="?attr/txt_eld_color"
                    android:textSize="@dimen/text_size_18"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/asPerShiftOnDutyTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/margin_short_5"
                    android:paddingBottom="@dimen/margin_13"
                    android:text="@string/per_shift"
                    android:textColor="?attr/txt_eld_color"
                    android:textSize="@dimen/text_size_14"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/drivingLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:background="@drawable/eld_blue_new_selector"
                android:layout_marginLeft="@dimen/margin_short_5"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_short_5"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="@dimen/margin_16"
                android:paddingRight="@dimen/margin_16"

                android:layout_weight="1"
                >





                <TextView
                    android:id="@+id/drivingTimeTxtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/drivingTxtVw"
                    android:layout_centerVertical="true"
                    android:padding="0dp"
                    android:layout_marginTop="0dp"
                    android:textColor="?attr/txt_eld_color"
                    android:textSize="@dimen/text_size_28"
                    android:text="@string/time_default"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/drivingViolationTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Violation"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/drivingTimeTxtVw"
                    android:textColor="?attr/txt_eld_color"
                    android:textSize="@dimen/text_size_14"

                    />


                <TextView
