<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLoginLayout"
    android:background="?attr/bgColor"

    >
    
<View
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/app_color"
    android:id="@+id/barView"
    android:visibility="gone"
    />








    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/loginScrollChildLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/bgColor"

            >

        <ImageView
        android:id="@+id/logoImg"
        android:layout_width="@dimen/view_height_390"
        android:layout_height="@dimen/view_height_200"
        android:src="@drawable/als_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_height_70"

        />


            <ImageView
                android:id="@+id/wifiImgBtn"
                android:layout_width="@dimen/view_height_50"
                android:layout_height="@dimen/view_height_50"
                android:src="@drawable/wifi_inactive"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_10"
                android:visibility="gone"
                android:tint="?attr/wifi_color"
                />






            <ImageView
        android:id="@+id/backImgView"
        android:layout_width="@dimen/view_height_80"
        android:layout_height="@dimen/view_height_60"
        android:src="@drawable/back"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
                android:tint="?attr/textColor"
        />

    <include
        android:id="@+id/loginLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/include_login"
        android:layout_below="@+id/logoImg"
        android:visibility="gone"
        />

    <include
        android:id="@+id/loginCoDriverLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/include_login_codriver"
        android:layout_below="@+id/logoImg"
        android:visibility="gone"
        />




    <include
        android:id="@+id/userTypeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/include_ask_login"

    />


            <TextView
                android:id="@+id/welcomeToAlsTV"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="@dimen/view_height_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20"
                android:text="@string/welcome_to_als_realtime"
                />



        </RelativeLayout>
    </ScrollView>



    <TextView
        android:id="@+id/appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="?attr/splash_gray"
        android:textSize="@dimen/text_size_21"
        android:layout_marginBottom="@dimen/margin_20"
        />



    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/Powered_by"
                        android:textColor="?attr/splash_gray"
                        android:textSize="@dimen/text_size_11"
                        android:paddingBottom="4dp"
                        />


    <TextView
        android:id="@+id/appTypeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:text="@string/dev"
        android:textColor="?attr/gray_text"
        android:textSize="@dimen/text_size_25"
        android:layout_margin="@dimen/margin_10"
        android:visibility="gone"

        />


    <ImageView
        android:id="@+id/loginBleStatusBtn"
        android:layout_width="@dimen/view_height_80"
        android:layout_height="@dimen/view_height_80"
        android:src="@drawable/ble_ic"
        android:tint="?attr/txt_eld_color"
        android:layout_alignParentRight="true"
        android:padding="@dimen/margin_15"
        android:layout_marginRight="@dimen/view_height_60"
        android:layout_marginTop="@dimen/margin_10"
        android:visibility="gone"

        />



    <ProgressBar
        android:id="@+id/progressBarLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:visibility="gone"
        />


                </RelativeLayout>
